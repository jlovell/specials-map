body {
	padding-top: 20px;
	background-color: #ECF0F1 !important;

}
div.links {
	margin: 0 auto;
	display: block;
	text-align: center;
	a {
		color: #666;
	}
}
table {
	max-width: 1300px;
	margin: 0 auto;
	th {
		padding: 10px;
	}
	td {
		padding: 8px 5px;
		background-color: white;
		&.food {
			width: 200px;
		}
		&.drink {
			width: 500px;
		}
	}
	a, a:visited, a:hover {
		color: #333;
		background-color: transparent;
	}
}

div#map {
	max-width: 640px;
	margin: 30px auto;
}

div.m-place {
	width: 80%;
	margin: 20px auto;
	border: 3px solid #3498db;
	border-radius: 10px;
	padding: 10px;
	background-color: #fff;
		font-family: 'Helvetica Neue', Arial, Helvetica;

	.m-direction {
		float: right;
		margin-top: 5px;
	}
	.m-food, .m-drink, .m-event {
		display: block;
		padding: 5px 0 5px 38px;
		border-top: 1px solid #3498db;
		min-height: 42px;
	}
	.m-food {
		background: url(<%= image_path '142_m.png' %>) no-repeat left center;
		background-size: 32px 32px;
	}
	.m-drink {
		background: url(<%= image_path '110_m.png' %>) no-repeat left center;
		background-size: 32px 32px;
	}
	.m-event {
		background: url(<%= image_path '156_m.png' %>) no-repeat left center;
		background-size: 32px 32px;
	}
}
h4 {
	margin-top: 2px;
	margin-bottom: 0;
}
h6 {
	margin-top: 5px;
	margin-bottom: 6px;
	color: #999;
	display: inline-block;
	// text-transform: uppercase;
	font-family: 'Helvetica Neue', Arial, Helvetica;
	font-weight: 300;

}